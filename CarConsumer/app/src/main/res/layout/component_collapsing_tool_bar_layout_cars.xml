<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CollapsingToolbarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundCars"
    android:id="@+id/id_collapsing_tool_bar_layout_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">


    <ImageView
        android:id="@+id/id_image_view_app_bar_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_gravity="top|center_horizontal"
        android:tint="#11000000"
        app:layout_collapseMode="parallax" />


    <LinearLayout
        android:id="@+id/id_linear_layout_title_colapsing_tool_bar_layout_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="top|center_horizontal"
            android:id="@+id/detail_text_view_car_name"
            android:textColor="@color/colorName"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/detail_text_view_car_type"
            android:textColor="@color/colorName" />

    </LinearLayout>

    <!-- The ToolBar component for this layout is here -->
    <include layout="@layout/component_tool_bar_layout_cars" />

